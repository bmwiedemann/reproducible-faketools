#!/bin/bash
. $(dirname $0)/../lib/reproducible-faketools-lib
for arg in "$@" ; do
    if  [[ $arg =~ ^-d ]] ||\
	[[ $arg =~ ^--date ]] ||\
	[[ $arg =~ ^-r ]] ||\
	[[ $arg =~ ^--reference ]]
        then
        exec $orig "$@"
    fi
done
faketoolnotice
LC_ALL=C exec $orig --utc -d "@${SOURCE_DATE_EPOCH}" "$@"
